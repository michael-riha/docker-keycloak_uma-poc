{
    "version": "0.2.0",
    "configurations": [{
       "name": "Python: Remote Debug pytest",
          "type": "python",
          "request": "attach",
          "connect": {
             "host": "localhost",
             "port": 5678
          },
          "pathMappings": [
            {
              "localRoot": "${workspaceFolder}/python/test",
              "remoteRoot": "."
            }
          ]
        },
        {
          "name": "Python: Remote Debug fastAPI",
             "type": "python",
             "request": "attach",
             "connect": {
                "host": "localhost",
                "port": 5679
             },
             "pathMappings": [
               {
                 "localRoot": "${workspaceFolder}/python/fastAPI/app",
                 "remoteRoot": "."
               }
             ]
        }
      ]
    }